<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/resultFragment">
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.tapi.android.example.screens.result.ResultFragment"
        android:label="ResultFragment" >
        <action
            android:id="@+id/action_resultFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.tapi.android.example.screens.detail.DetailFragment"
        android:label="DetailFragment" >

        <argument
            android:name="urlThumbs"
            app:argType="string" />

    </fragment>
</navigation>